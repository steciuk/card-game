{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"typeRoots": ["@types", "node_modules/@types"]
	},
	"include": ["src/**/*"]
}
